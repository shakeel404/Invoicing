@model UEWeb.Models.Product

@{
	ViewBag.Title = "Details";
}

<br />
<div class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h2>Edit Product</h2>
				</div>
				<div class="card-body">

					<h5 class="text-primary"> @Model.Name @Model.Code</h5>
					<br>
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Name">
					</div>

					<div class="form-group">
						<label>Code</label>
						<input type="text" class="form-control" disabled="" placeholder="Address" value="@Model.Code">
					</div>
					<div class="form-group">
						<label>Price</label>
						<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Price">
					</div>
					@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
				</div>
			</div>
		</div>
	</div>
</div>
 