@model UEWeb.Models.Customer

@{
	ViewBag.Title = "Details";
}
<br />
<div class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h2>Details</h2>
				</div>
				<div class="card-body">

					<h5 class="text-primary"> @Model.Name </h5>
					<br>
					<div class="form-group">
						<label>Name</label>
						<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Name">
					</div>
					<div class="form-group">
						<label>Address</label>
						<input type="text" class="form-control" disabled="" placeholder="Address" value="@Model.Address">
					</div>
					<div class="form-group">
						<label>Contact</label>
						<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Contact">
					</div>

					@Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
				</div>
			</div>

			<div class="card">
				<div class="card-header">
					<div class="row">
						<div class="col-md-6">
							<h2>Invoices</h2>
						</div>
						<div class="col-md-6 text-right">
							<a href="@Url.Action("Create","Invoice",new {customerId= Model.Id })" class="btn btn-primary">Create New</a>
						</div>
					</div>
				</div>
				<div class="card-body">

					<table class="table">
						<thead class="text-success">
							<tr>
								<th>
									Invoice No
								</th>

								<th>
									Date
								</th>
								<th>
									 
								</th>
								 
							</tr>
						</thead>
						<tbody>

							@foreach (var invoice in Model.Invoices)
							{
								<tr>
									<th>
										@invoice.Id@invoice.Date.Year@invoice.InvoiceDetails.Count
									</th>

									<th >
										@invoice.Date.ToLongDateString()
									</th>
									<th>
										<a href="@Url.Action("Details","Invoice",new {id= invoice.Id })" class="btn btn-success">Details</a>
									</th>

								</tr>
							}

						</tbody>
					</table> 
				</div>
			</div>
		</div>
	</div>
</div> 
 
