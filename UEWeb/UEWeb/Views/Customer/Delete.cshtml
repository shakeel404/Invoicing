@model UEWeb.Models.Customer

@{
	ViewBag.Title = "Delete";
}

<br />
<div class="content">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<h2>Are you sure you want to delete?</h2>
				</div>
				<div class="card-body">
					
						<h5 class="text-primary"> @Model.Name </h5>
						<br>
						<div class="form-group">
							<label>Name</label>
							<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Name">
						</div>
						<div class="form-group">
							<label>Address</label>
							<input type="text" class="form-control" disabled="" placeholder="Address" value="@Model.Address">
						</div>
						<div class="form-group">
							<label>Contact</label>
							<input type="text" class="form-control" disabled="" placeholder="Name" value="@Model.Contact">
						</div>

						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							<div class="form-actions no-color">
								<input type="submit" value="Delete" class="btn btn-default" /> 

							</div>
						}  
				</div>
			</div>
		</div>
	</div>
</div> 